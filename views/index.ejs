<body>
  <div class="maindiv" style="background-color: black;">
    <h1>BMI Calculator</h1>
    <form action="/" method="post">
      <div class="form-group firstdiv">
      <input type="text" class="" name="weight" placeholder="Enter your weight" required>
      <select id="unitsforweight" name="unitsforweight">
        <option name="kilograms" value="kilograms">Kilograms</option>
        <option name="pounds" value="pounds">Pounds</option>

      </select>
      </div>
      <div class="form-group seconddiv">
      <input type="text" name="height" placeholder="Enter your height" required>
      <select id="unitsforheight" name="unitsforheight">
        <option name="centimetres" value="centimetres">Centimetres</option>
        <option name="inches" value="inches">Inches</option>

      </select>
      </div>
      <div class="buttondiv">
      <button class="btn btn-lg btn-dark btn-block" type="submit">Calculate</button>
      <div>
    </form>

  <!-- </div> -->
</div>
</body>

</html>
